<%= render partial: 'shared/blog_header', locals: { :item => @feature_blog } %>

<div class="row">
  <div class="col-md-8 blog-main">
    <h3 class="pb-3 mb-4 font-italic border-bottom">
      From the Vault   <%= link_to 'Add Blog', new_blog_path, class: 'btn btn-primary' if logged_in?(:site_admin) %>
    </h3>

    <h2><%= @blog.title %></h2>

    <p>
      <%= link_to @blog.topic.title, topic_path(@blog.topic.id) %>
    </p>
    <% if logged_in?(:site_admin) %>
      <%= link_to 'Edit', edit_blog_path(@blog) %> |
    <% end %>
    <%= link_to 'Back', blogs_path %>
    <p>
      <%= @blog.body %>
    </p>

    <% unless current_user.is_a? GuestUser %>
      <%= render partial: 'comments/comment_form' %>
    <% end %>

    <div id="comments" data-blog-id="<%= @blog.id %>">
      <%= render @blog.comments %>
    </div>


  </div>

  <%= render partial: 'blogs/sidebar' %>

</div>

