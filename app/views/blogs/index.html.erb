<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic"><%= @feature_blog.title %></h1>
    <p class="lead my-3"><%= truncate(@feature_blog.body, :length => 100) %></p>
    <p class="lead mb-0"><%= link_to 'Continue Reading...', blog_path(@feature_blog.id), class: 'text-white font-weight-bold' %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-8 blog-main">
    <h3 class="pb-3 mb-4 font-italic border-bottom">
      From the Vault   <%= link_to 'Add Blog', new_blog_path, class: 'btn btn-primary' if logged_in?(:site_admin) %>
    </h3>

    <%= render @blogs %>

    <nav class="blog-pagination">
      <a class="btn btn-outline-primary" href="#">Older</a>
      <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
    </nav>

  </div><!-- /.blog-main -->

  <%= render partial: 'blogs/sidebar' %>

</div><!-- /.row -->


<p id="notice"><%= notice %></p>
