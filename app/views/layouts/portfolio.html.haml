!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/

    %title= @page_title

    = csrf_meta_tags

    %meta{:content => "#{@seo_keywords}", :name => "keywords"}/

    = stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload'

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    = render :partial => 'shared/portfolio_navbar'

    %main{ :role => 'main' }

      - unless logged_in?(:site_admin)
        = render :partial => 'shared/portfolio_masthead'

      %br/
      = yield

    = render :partial => 'shared/portfolio_footer'

    = source_helper