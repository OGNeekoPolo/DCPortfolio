.col-md-4

  .card.mb-4.box-shadow

    = image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?

    .card-body

      %span= link_to portfolio_item.title, portfolio_show_path(portfolio_item)
      |
      = portfolio_item.subtitle

      %p.card-text= truncate(portfolio_item.body, :length => 100)