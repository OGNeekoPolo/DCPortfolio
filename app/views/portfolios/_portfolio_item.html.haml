%h3= link_to portfolio_item.title, portfolio_show_path(portfolio_item)

%p= portfolio_item.subtitle

%p= portfolio_item.body

= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?

%br/

= link_to 'Edit', edit_portfolio_path(portfolio_item), class: 'btn btn-primary' if logged_in?(:site_admin)

= link_to 'Delete', portfolio_item, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' if logged_in?(:site_admin)
%hr/